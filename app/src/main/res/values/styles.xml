<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="fontFamily">@font/muli_bold</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Texts-->
    <style name="subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textgrey</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="mediumText" parent="bigHeading">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="small_text" parent="subtitle">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="small_text.black">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="button_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="button_text.big">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="bigHeading">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="AppBarTitle" parent="bigHeading">
        <item name="android:textSize">18sp</item>
    </style>

    <!--Details Activity-->
    <style name="welcome_msg">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>


    <!--Fab & Bottom Bar-->
    <style name="ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton" parent="" >
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@null</item>

    </style>
    <style name="bottom_app_bar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="fabCradleVerticalOffset">0dp</item>
        <item name="fabCradleRoundedCornerRadius">40dp</item>
        <item name="fabCradleMargin">12dp</item>
    </style>

    <!--Navigation Drawer-->
    <style name="ThemeOverlay.AppCompat.NavTheme">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <!--Chat Card-->
    <style name="Card" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
        <item name="android:topLeftRadius">0dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.DifferentCornerSize.Card">

    </style>

    <!--Login Screen-->

    <style name="login_yellowtext" parent="on_big_text.yellow">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>
    <style name="login_blacktext" parent="on_big_text">
       <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="moto_text" parent="on_big_text">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="otp_text" parent="login_yellowtext">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="otp_text.black">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--Requests Screen-->
    <style name="italicText" parent="small_text">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="requests_small_text" parent="small_text">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/textgrey</item>
    </style>
    
    <!--OnBoarding Screen-->
    <style name="on_big_text" parent="small_text.black">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="on_big_text.yellow">
        <item name="android:textColor">@color/yellow</item>
    </style>
    <style name="on_smalltext" parent="on_big_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textgrey</item>
    </style>

    <!--Job Card-->
    <style name="jobtitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="jobtitle.details">
        <item name="android:textColor">@color/textgrey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--Profile Activity-->
    <style name="profile_main">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="profile_small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textgrey</item>
    </style>
    <style name="profile_card_small" parent="profile_small">
        <item name="android:textSize">8dp</item>
    </style>


</resources>
