<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <FrameLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
               android:background="@drawable/white_gradient"
                android:layout_gravity="top"
                android:layout_height="300dp"/>

        <ImageView android:layout_width="match_parent"
                android:id="@+id/expand_image"
                android:layout_gravity="bottom"
                android:layout_height="300dp"/>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/printing_toolbar"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:layout_width="match_parent"
            android:background="@drawable/toolbar_transparent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            app:layout_collapseMode="pin"/>

    </FrameLayout>


    <TextView android:layout_width="match_parent"
    android:id="@+id/text1"
    android:textSize="21sp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:textColor="@color/colorAccent"
    android:layout_marginStart="12dp"
    android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            tools:listitem="@layout/types_row"
            android:layout_marginStart="24dp"
            android:id="@+id/type_recycler"
            android:overScrollMode="never"
            android:layout_height="wrap_content"/>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:id="@+id/portfolio_rv"
                                               android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               tools:listitem="@layout/how_row"
                                               android:id="@+id/how_recycle"
                                               android:paddingBottom="32dp"
                                               android:layout_marginBottom="60dp"
                                               android:overScrollMode="never"
                                               android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>

