<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/on_viewPager"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_centerInParent="true"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/on_viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/colorAccent"
            app:dotsCornerRadius="8dp"
            app:dotsSize="8dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:selectedDotColor="@color/yellow"
            app:progressMode="true"
    />
    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:text="Get Started"
                                                       android:textAllCaps="false"
                                                       android:visibility="gone"
                                                       android:layout_below="@+id/dots_indicator"
                                                       android:layout_marginTop="32dp"
                                                       android:layout_centerHorizontal="true"
                                                       android:id="@+id/get_started"
                                                       app:backgroundTint="@color/yellow"
                                                       android:textColor="@color/colorAccent"
                                                       android:textSize="18sp"
                                                       android:layout_height="wrap_content"/>

</RelativeLayout>