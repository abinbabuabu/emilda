<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/services_card"
                                                   cardCornerRadius="8dp"
                                                   app:cardElevation="6dp"
                                                   android:clickable="true"
                                                   android:outlineAmbientShadowColor="@color/colorAccent"
                                                   android:outlineSpotShadowColor="@color/colorAccent"
                                                   android:layout_margin="10dp"
                                                   android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="80dp"
                   android:id="@+id/card_image"
                   android:layout_margin="30dp"
                   android:layout_gravity="center"
                   app:srcCompat="@drawable/ic_web_design"
                   android:layout_height="80dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:text="Sample"
                  android:id="@+id/card_text"
                  style="@style/small_text"
                  android:layout_marginBottom="@dimen/card_title_marg_bottom"
                  android:gravity="center"
                  android:layout_height="wrap_content" app:fontFamily="@font/muli_bold"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>